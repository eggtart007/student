/**index.wxss**/
.slider-bar {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  width: 700rpx;
  z-index: 1000;
}

.new-wrapper {
  background-color: #f3f3f3
}

.swiper {
  position: relative; 
  margin-bottom: 10px;
}

.top-img {
  filter: brightness(65%)
}

.top-title {
  position: absolute;
  bottom: 30px;
  z-index: 1000;
  color: #fff;
  padding: 0 10px;
}


.stories-group {
  padding: 0;
}

/**stories-box**/
.stories-box .s-b-title {
  color: #757575;
  font-size: 12px;
  padding: 15px;
  padding-top: 0;
}

.stories-box .s-b-list {
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stories-box .s-b-list .l-item{
  display: flex;
  padding: 10px;
  box-sizing: border-box;
  width: 700rpx;
  height: 100px;
  background-color: #fff;
  border-radius: 5px;
  margin-bottom: 10px;
}

.l-item .l-item-title {
  flex: 1;
  height: 80px;
  font-size: 14px;
  font-weight: 700;
  overflow: hidden;
}

.l-item .l-item-img {
  width: 80px;
  height: 80px;
  margin-left: 8px;
}

.swiper {
  height: 200px; 
  width: 750rpx;
}